module sfmlTest

include <SFML/Graphics.h>

import ../std/sfml/sfml
import ../std/colours


fn main()
    print("sfml")
    let w = Window()
    w.create()

    data vertices [Vertex]
    vertices += [
        Vertex(Vec2f(200, 50), Red(), Vec2f(0, 0))
        Vertex(Vec2f(100, 250), Green(), Vec2f(0, 0))
        Vertex(Vec2f(300, 250), Blue(), Vec2f(0, 0))
    ]

    while w.isOpen()
        while w.pollEvent() -> Event(event)
            switch event
                Closed(); w.close()
                None();

        w.clearWindow(Green())
        {w, vertices}.drawPrimitives()
        w.display()

    w.destroy()
