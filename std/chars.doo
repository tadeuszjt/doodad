module chars

import_c ctype.h

fn isAlpha(c char) bool
    return (c >= 'A' && c <= 'Z') || (c >= 'a' && c <= 'z')

fn isDigit(c char) bool
    return c >= '0' && c <= '9'

fn isSpace(c char) bool
    return c == ' ' || c == '\t' || c == '\n'

fn toUpper(c char) char
    return char(c::toupper(i32(c)))

fn readDigit(c char) i64
    if c >= '0' && c <= '9'
        return i64(c - '0')
    else
        return 0
