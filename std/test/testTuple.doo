module testTuple 

import ../io

fn testTupleMake()
    let y = (7, 8)
    let x = 5
    let z = true
    let tuple = (1, y, 3, z, x)
    let (1, (7, 8), 3, true, 5) = tuple


fn testTupleEq() 
    let a = (1, true, (7, '4'))
    let b = (1, true, (7, '5'))
    let false = a == b
    b = (1, true, (7, '4'))
    let true = a == b


fn testTupleInfix() 
    let a = (1, (2, 3))
    let b = (2, (3, 7))
    let (3, (5, 10)) = a + b
    let (-1, (-1, -4)) = a - b
    let (2, (6, 21)) = a * b


fn {io Io} testTuple()
    testTupleMake()
    testTupleEq()
    testTupleInfix()
    io.write("testTuple passed\n")
