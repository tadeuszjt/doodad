module sfmlTest

import sfml
import ../colours


fn main()
    print("sfml")

    data vertices [Vertex]

    let w = Window()
    w.create()

    vertices += [
        ((200, 50),  Red(),   (0, 0))
        ((100, 250), Green(), (0, 0))
        ((300, 250), Blue(),  (0, 0))
    ]

    while w.isOpen()
        while w.pollEvent() -> Event(event)
            switch event
                Closed(); w.close()
                None();

        w.clearWindow(White())
        {w, vertices}.drawPrimitives()
        w.display()

    w.destroy()
