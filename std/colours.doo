module colours

import std/integer

type Colour Tuple{U8, U8, U8, U8}

fn Construct::construct(r U8, g U8, b U8, a U8) Colour
    let c : Colour
    c.0 = r
    c.1 = g
    c.2 = b
    c.3 = a
    return c

