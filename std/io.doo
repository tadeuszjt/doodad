module io

import_c stdio.h

type Io ()
data io Io

fn {io Io} getChar() char
    return char(c::getchar())


fn {io Io} putChar(c char)
    c::putchar(i32(c))


fn {io Io} putStr(s string)
    for s -> c; io.putChar(c)


fn {io Io} putStrLn(s string)
    for s -> c; io.putChar(c)
    io.putChar('\n')
