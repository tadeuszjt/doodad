module rand

include <stdlib.h>
include <time.h>
include <math.h>
link m

type Rand i64


fn {r Rand} I64(range [..]i64) i64
    let x = 0
    ${ $x = (rand() % ($range.max - $range.min)) + $range.min; }
    return x


fn {r Rand} F32(min f32, max f32) f32
    let x = 0
    if max == min
        return min
    ${ $x = fmod(rand(), ((double)$max - (double)$min)) + (double)$min; }
    return x
