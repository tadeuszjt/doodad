module io

import strings

extern "getchar" Cgetchar() i32
extern "putchar" Cputchar(c char)

fn getChar() char
    return char(Cgetchar())


fn getStrLn() string
    let str = ""

    while true
        let c = char(Cgetchar())
        if c < 1;          return "\0"
        else if c == '\n'; return str
        else;              str <- c



fn putStrLn(str string)
    let i = 0
    while i < len(str)
        Cputchar(str[i])
        i = i + 1

    Cputchar('\n') 

