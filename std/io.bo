module io

import strings

extern "getchar" Cgetchar() i32
extern "putchar" Cputchar(c char)

fn getChar() char
    return char(Cgetchar())


fn getStrLn() string
    let str = ""

    while true
        switch char(Cgetchar())
            c | c < char(1); return "\0"
            '\n'           ; return str
            c              ; str <- c


fn putStrLn(str string)
    let i = 0
    while i < len(str)
        Cputchar(str[i])
        i = i + 1

    Cputchar('\n') 

